
@{
    ViewData["Title"] = "Share Sticker";
}
@model StickerSwap.Models.EditStickerViewModel

@section Scripts {
    <script src="~/js/bootstrap-tagsinput.min.js"></script>
    <script>
    </script>
}

@section Stylesheets  {
    <link rel="stylesheet" type="text/css" href="~/css/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap-tagsinput.css">
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Share a Sticker
        </div>
        <div class="card-body">
            <p class="lead">Include information about your sticker. Make sure to upload a cool picture! Once you've shared your sticker, other users can request the sticker. Once they receive the sticker, you'll get sticker credits.</p>
            <form method="post" asp-action="UpdateSticker" asp-controller="Sticker" enctype="multipart/form-data" asp-route-id="@Model.Id">

                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">A catchy title really sets your sticker apart.</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">Tell us a little about your sticker. Does it like long walks on the beach?</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Height" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Height" class="form-control" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                        <small class="form-text text-muted">Sometimes it's hard to tell how big a sticker is from a picture</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Width" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Width" class="form-control" />
                        <span asp-validation-for="Width" class="text-danger"></span>
                        <small class="form-text text-muted">Sometimes it's hard to tell how big a sticker is from a picture</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <small class="form-text text-muted">How many stickers do you have? You can always update this later if you get more.</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Credits" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Credits" class="form-control" />
                        <span asp-validation-for="Credits" class="text-danger"></span>
                        <small class="form-text text-muted">How many sticker credits does it take to get a hold of that sweet, sweet sticker?</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Image" type="file" class="form-control" style="height:auto" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <small class="form-text text-muted">A picture is worth a thousand words. </small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Tags" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Tags" data-role="tagsinput" class="form-control" />
                        <small class="form-text text-muted">Some tag bling makes it easier to find your sticker.</small>
                    </div>

                </div>

                <input type="submit" value="Update" class="btn btn-default" />
            </form>
        </div>
    </div>
</div>


